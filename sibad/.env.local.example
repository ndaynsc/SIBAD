# ========================================
# SiBansosDesa Plus - Environment Configuration
# ========================================

# REQUIRED: Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OPTIONAL: WhatsApp Configuration
# Admin WhatsApp number in international format (without +, e.g., 628123456789)
ADMIN_WHATSAPP_NUMBER=628123456789

# OPTIONAL: Development Features
# When set to 'true', OTP will be returned in JSON response for testing
DEV_RETURN_OTP=false

# OPTIONAL: Redis Configuration (for distributed rate limiting)
REDIS_URL=redis://localhost:6379

# OPTIONAL: Headless Scraping Configuration
# Enable Puppeteer for JavaScript-rendered content scraping
USE_PUPPETEER=false
# Path to Chromium/Chrome binary (leave empty to use bundled version)
# Vercel Chromium: /var/task/node_modules/chromium/.chromium-browser-snapshots/linux-1000000/chrome
PUPPETEER_EXECUTABLE_PATH=

